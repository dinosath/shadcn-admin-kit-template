{% if authentication != 'none' -%}
import { useState } from "react";
import { Form, required, useLogin, useNotify } from "ra-core";
import type { SubmitHandler, FieldValues } from "react-hook-form";
import { Button } from "@/components/ui/button";
import { TextInput } from "@/components/admin/text-input";
import { Notification } from "@/components/admin/notification";
import { Tabs, TabsContent, TabsList, TabsTrigger } from "@/components/ui/tabs";
import { Alert, AlertDescription, AlertTitle } from "@/components/ui/alert";
import { InfoIcon } from "lucide-react";

const API_URL = '/auth';

export const LoginPage = (props: { redirectTo?: string }) => {
  const { redirectTo } = props;
  const [loading, setLoading] = useState(false);
  const [registerLoading, setRegisterLoading] = useState(false);
  const [activeTab, setActiveTab] = useState("login");
  const login = useLogin();
  const notify = useNotify();

  const handleLogin: SubmitHandler<FieldValues> = (values) => {
    setLoading(true);
    login(values, redirectTo)
      .then(() => {
        setLoading(false);
      })
      .catch((error) => {
        setLoading(false);
        notify(
          typeof error === "string"
            ? error
            : typeof error === "undefined" || !error.message
            ? "ra.auth.sign_in_error"
            : error.message,
          {
            type: "error",
            messageArgs: {
              _:
                typeof error === "string"
                  ? error
                  : error && error.message
                  ? error.message
                  : undefined,
            },
          }
        );
      });
  };

  const handleRegister: SubmitHandler<FieldValues> = async (values) => {
    setRegisterLoading(true);
    try {
      const response = await fetch(`${API_URL}/register`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          username: values.email,
          password: values.password,
          email: values.email,
        }),
      });

      if (!response.ok) {
        const error = await response.json().catch(() => ({ error: 'Registration failed' }));
        throw new Error(error.error || 'Registration failed');
      }

      notify('Registration successful! Please sign in.', { type: 'success' });
      setActiveTab('login');
    } catch (error) {
      notify(
        error instanceof Error ? error.message : 'Registration failed',
        { type: 'error' }
      );
    } finally {
      setRegisterLoading(false);
    }
  };

  return (
    <div className="min-h-screen flex">
      <div className="container relative grid flex-col items-center justify-center sm:max-w-none lg:grid-cols-2 lg:px-0">
        <div className="relative hidden h-full flex-col bg-muted p-10 text-white dark:border-r lg:flex">
          <div className="absolute inset-0 bg-zinc-900" />
          <div className="relative z-20 flex items-center text-lg font-medium">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              strokeWidth="2"
              strokeLinecap="round"
              strokeLinejoin="round"
              className="mr-2 h-6 w-6"
            >
              <path d="M15 6v12a3 3 0 1 0 3-3H6a3 3 0 1 0 3 3V6a3 3 0 1 0-3 3h12a3 3 0 1 0-3-3" />
            </svg>
            {{ project_name | pascal_case }}
          </div>
          <div className="relative z-20 mt-auto">
            <blockquote className="space-y-2">
              <p className="text-lg">
                &ldquo;Welcome to {{ project_name | pascal_case }}. Please sign in or create an account to continue.&rdquo;
              </p>
            </blockquote>
          </div>
        </div>
        <div className="lg:p-8">
          <div className="mx-auto flex w-full flex-col justify-center space-y-6 sm:w-[350px]">
            <Alert>
              <InfoIcon className="h-4 w-4" />
              <AlertTitle>Default Admin Credentials</AlertTitle>
              <AlertDescription>
                <strong>Username:</strong> admin<br />
                <strong>Password:</strong> Check server logs on first startup
              </AlertDescription>
            </Alert>
            
            <Tabs value={activeTab} onValueChange={setActiveTab} className="w-full">
              <TabsList className="grid w-full grid-cols-2">
                <TabsTrigger value="login">Sign In</TabsTrigger>
                <TabsTrigger value="register">Register</TabsTrigger>
              </TabsList>
              
              <TabsContent value="login" className="space-y-4">
                <div className="flex flex-col space-y-2 text-center">
                  <h1 className="text-2xl font-semibold tracking-tight">Sign in</h1>
                  <p className="text-sm leading-none text-muted-foreground">
                    Enter your credentials to access your account
                  </p>
                </div>
                <Form className="space-y-4" onSubmit={handleLogin}>
                  <TextInput
                    label="Email / Username"
                    source="email"
                    type="text"
                    validate={required()}
                  />
                  <TextInput
                    label="Password"
                    source="password"
                    type="password"
                    validate={required()}
                  />
                  <Button
                    type="submit"
                    className="cursor-pointer w-full"
                    disabled={loading}
                  >
                    {loading ? "Signing in..." : "Sign in"}
                  </Button>
                </Form>
              </TabsContent>
              
              <TabsContent value="register" className="space-y-4">
                <div className="flex flex-col space-y-2 text-center">
                  <h1 className="text-2xl font-semibold tracking-tight">Create account</h1>
                  <p className="text-sm leading-none text-muted-foreground">
                    Enter your details to create a new account
                  </p>
                </div>
                <Form className="space-y-4" onSubmit={handleRegister}>
                  <TextInput
                    label="Email"
                    source="email"
                    type="email"
                    validate={required()}
                  />
                  <TextInput
                    label="Password"
                    source="password"
                    type="password"
                    validate={required()}
                  />
                  <TextInput
                    label="Confirm Password"
                    source="confirmPassword"
                    type="password"
                    validate={required()}
                  />
                  <Button
                    type="submit"
                    className="cursor-pointer w-full"
                    disabled={registerLoading}
                  >
                    {registerLoading ? "Creating account..." : "Create account"}
                  </Button>
                </Form>
              </TabsContent>
            </Tabs>
          </div>
        </div>
      </div>
      <Notification />
    </div>
  );
};
